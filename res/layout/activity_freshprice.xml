<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".FreshpriceActivity"
    android:background="#ADCC3B"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/itemname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="FreshPrice"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>
<ScrollView 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:paddingTop="30dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="0.25"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                android:layout_weight="0.66"
                android:text="Compare Prices"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <ImageButton
                android:id="@+id/compareItemsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:src="@drawable/snapshot1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:paddingTop="@dimen/activity_vertical_margin"
                        android:layout_weight="0.25"
            android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_weight="0.66"
                            android:text="My List"
                            android:textAppearance="?android:attr/textAppearanceLarge" />

            <ImageButton
                android:id="@+id/myListButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:src="@drawable/clipboard" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="5dp"
                        android:layout_weight="0.25"
            android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_weight="0.66"
                            android:text="Deals Board"
                            android:textAppearance="?android:attr/textAppearanceLarge" />

            <ImageButton
                android:id="@+id/dealsBoardButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:src="@drawable/dealsboard" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:paddingTop="@dimen/activity_vertical_margin"
                        android:layout_weight="0.25"
            android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_weight="0.66"
                            android:text="Go Shopping"
                            android:textAppearance="?android:attr/textAppearanceLarge" />

            <ImageButton
                android:id="@+id/goShoppingButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:src="@drawable/shoppingcart" />
        </LinearLayout>
        
                <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:paddingTop="@dimen/activity_vertical_margin"
                        android:layout_weight="0.25"
            android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_weight="0.66"
                            android:text="Compare Stores"
                            android:textAppearance="?android:attr/textAppearanceLarge" />

            <ImageButton
                android:id="@+id/compareStoresButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:src="@drawable/scale" />
        </LinearLayout>
        
                <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:paddingTop="@dimen/activity_vertical_margin"
                        android:layout_weight="0.25"
            android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_weight="0.66"
                            android:text="Recipes"
                            android:textAppearance="?android:attr/textAppearanceLarge" />

            <ImageButton
                android:id="@+id/recipesButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:src="@drawable/cook" />
        </LinearLayout>
        
                        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:paddingTop="@dimen/activity_vertical_margin"
                        android:layout_weight="0.25"
            android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_weight="0.66"
                            android:text="History"
                            android:textAppearance="?android:attr/textAppearanceLarge" />

            <ImageButton
                android:id="@+id/historyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:src="@drawable/history" />
        </LinearLayout>

    </LinearLayout>
    </ScrollView>

</LinearLayout>
